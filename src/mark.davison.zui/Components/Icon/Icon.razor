@inherits Component

<i class="bi-@IconType" style="color: @IconColour; font-size: @Size;"></i>

@code {

    [Parameter, EditorRequired]
    public string IconType { get; set; } = default!;

    [Parameter]
    public string IconColour { get; set; } = "currentColor";

    [Parameter]
    public string Size { get; set; } = "24px";

}