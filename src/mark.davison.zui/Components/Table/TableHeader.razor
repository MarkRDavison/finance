@typeparam TKey
@typeparam TRow where TRow : class, ITableRow<TKey>

<thead>
    <tr>
        @foreach (var column in ColumnDefinitions)
        {
            var style = ColumnStyle(column);
            <th key="@column.Title _ColHead" style="@style">@column.Title</th>
        }
    </tr>
</thead>

@code {

    private string ColumnStyle(TableColumDefinition<TRow> definition) {
        return $"width: {definition.Width}; text-align: right;";
    }

    [Parameter, EditorRequired]
    public IEnumerable<TableColumDefinition<TRow>> ColumnDefinitions { get; set; } = Enumerable.Empty<TableColumDefinition<TRow>>();
    
}
