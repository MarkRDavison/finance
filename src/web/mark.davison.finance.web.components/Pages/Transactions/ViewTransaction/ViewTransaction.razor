@attribute [Route(Routes.Transaction)]
@inherits ComponentWithState
@inject IStateHelper _stateHelper

<MudPaper>
    <MudStack Row="true" Class="pa-10">
        <MudText Typo="Typo.h4">View Transaction</MudText>
        <MudTooltip Text="Edit">
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Color="Color.Primary" Style="min-width: 60px;" />
        </MudTooltip>
    </MudStack>
    <MudGrid>
        @*I think this means each of these are 6 (50%) until you hit sm (small/med tablet) and then they become 12 (100%)*@
        <MudItem sm="12" md="6">
            <MudCard Outlined="true">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Class="pb-4">Transaction information</MudText>
                        <MudDivider Class="pb-4" />
                        <MudGrid>
                            <MudItem xs="6">
                                Type
                            </MudItem>
                            <MudItem xs="6">
                                THE_TYPE
                            </MudItem>
                            <MudItem xs="6">
                                Description
                            </MudItem>
                            <MudItem xs="6">
                                THE_DESCRIPTION
                            </MudItem>
                            <MudItem xs="6">
                                Date
                            </MudItem>
                            <MudItem xs="6">
                                THE_DATE
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
            </MudCard>
        </MudItem>
        <MudItem sm="12" md="6">
            <MudCard Outlined="true">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Class="pb-4">Meta information</MudText>
                        <MudDivider Class="pb-4" />
                        <MudGrid>
                            <MudItem xs="6">
                                Source accounts
                            </MudItem>
                            <MudItem xs="6">
                                THE_ACCOUNTS
                            </MudItem>
                            <MudItem xs="6">
                                Total amount
                            </MudItem>
                            <MudItem xs="6">
                                THE_AMOUNT
                            </MudItem>
                        </MudGrid>
                    </CardHeaderContent>
                </MudCardHeader>
            </MudCard>
        </MudItem>
        @if (_items.Count() > 2)
        {
            <MudItem sm="12" Class="pa-6">
                <MudText Typo="Typo.h5">Splits</MudText>
            </MudItem>
        }
        @foreach (var item in _items)
        {
            <MudItem sm="12" md="6" lg="4">
                <MudCard Outlined="true">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Class="pb-4">@item.Description</MudText>
                            <MudDivider Class="pb-4" />
                            <MudGrid>
                                <MudItem xs="12">
                                    <MudLink Href="@item.SourceAccount.Href">@item.SourceAccount.Text</MudLink>
                                     ->
                                        <span style="@item.AmountStyle">@item.Amount</span>
                                     ->
                                    <MudLink Href="@item.DestinationAccount.Href">@item.DestinationAccount.Text</MudLink>
                                </MudItem>
                                @if (item.Category != null)
                                {
                                    <MudItem xs="6">
                                        Category
                                    </MudItem>
                                    <MudItem xs="6">
                                        <MudLink Href="@item.Category.Href">@item.Category.Text</MudLink>
                                    </MudItem>
                                }
                            </MudGrid>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" />
                        </CardHeaderActions>
                    </MudCardHeader>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudPaper>