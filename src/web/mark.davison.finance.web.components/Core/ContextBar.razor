@using mark.davison.zui.Components.Button
@using mark.davison.zui.Core
@inject IAuthenticationContext _authContext

<div class="z-context">
    <p>@_start.ToString("MMMM d, yyyy") - @_end.ToString("MMMM dd, yyyy")</p>
    <p>@_authContext.User?.name</p>
    <Button
        Variant="ButtonVariant.Text"
        Type="ButtonType.Secondary"
        IconStyle="IconStyle.IconOnly"
        Icon="plus-lg"  />
</div>

@code {
    private DateOnly _start = new DateOnly(DateOnly.FromDateTime(DateTime.Today).Year, DateOnly.FromDateTime(DateTime.Today).Month, 1);
    private DateOnly _end = new DateOnly(DateOnly.FromDateTime(DateTime.Today).Year, DateOnly.FromDateTime(DateTime.Today).Month + 1, 1).AddDays(-1);

}
