<style>
    .mud-picker.mud-picker-inline.mud-picker-input-button {
        visibility: collapse !important;
    }

    .mud-range-input-separator {
        visibility: collapse !important;
    }
</style>

<MudButton OnClick="@OpenPicker">@FormattedRange</MudButton>
<MudDateRangePicker @ref="_picker" Style="visibility: collapse !important" DateRange="@_range" DateRangeChanged="@DateRangeChanged" AutoClose="true">
    <PickerActions>
        <MudButton Class="mr-auto align-self-start" OnClick="@(() => _picker.Close(false))">Cancel</MudButton>
        <MudButton OnClick="@Reset">Reset</MudButton>
    </PickerActions>
</MudDateRangePicker>
<span data-testid="@DataTestIds.Username">@AuthenticationContext.User?.preferred_username</span>