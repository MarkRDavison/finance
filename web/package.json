{
  "name": "finance-web",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": " webpack-dev-server --mode development",
    "start:dev:https": " webpack-dev-server --https  --mode development",
    "build": "webpack --mode production",
    "test": "jest --verbose --runInBand --detectOpenHandles --coverage --reporters=default",
    "test:watch": "jest --runInBand --watchAll --coverage --reporters=default",
    "test:ci": "jest --ci --verbose --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint --ext ts,tsx src/ --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "cssnano": "^5.0.16",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.0",
    "mini-css-extract-plugin": "^2.5.3",
    "prettier": "^2.5.1",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "typescript-plugin-css-modules": "^3.4.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "@mark.davison/zeno-common-client": "^0.1.18",
    "@mark.davison/zeno-ui": "^1.0.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "npm run lint",
      "jest --coverage --findRelatedTests",
      "git add"
    ]
  },
  "moduleDirectories": [
    ".",
    "node_modules"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    },
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts",
      "!src/reportWebVitals.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageReporters": [
      "html",
      "text",
      "json",
      "lcov",
      "text-summary",
      "cobertura",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jestSetupAfterEnv.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^@/(.*)(module.css|module.less)$": "<rootDir>/__mocks__/styleMock.js",
      "^@/(.*)(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "src/(.*)$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}